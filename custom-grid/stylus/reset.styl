@import "./reset"

$cols = 12   // 定义栅格数
// 移动设备优先
.container
  margin-left auto
  margin-right auto
  padding-left 15px
  padding-right 15px
.row
  display flex
  flex-wrap nowrap
  margin-left -15px
  margin-right -15px
// 12 份 100%
for $v in 1..$cols
  .col-{$v}
    width (100 / 12 * $v)%

