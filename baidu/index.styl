*
    margin 0
    padding 0

body 
    background-color #f2f2f2

header 
    background url(./images/mount.png) 0 0 no-repeat
    background-size 100%
    .mask
        width 100%
        height 100%
        background rgba(0,0,0,.65)
        overflow hidden
    .content
        width 970px
        margin 208px auto 0
        color rgba(255,255,255,.7)

.hello .title 
    font-size 62px
    text-align center
    font-weight 200
    color rgba(255,255,255,1)
    line-height 72px  

.hello .text
    font-size 20px
    font-weight 200
    line-height 32px
    width 766px
    margin 86px auto 0
    text-align center

.create
    box-sizing border-box
    width 100%
    border 1px solid rgba(255,255,255,.2)
    border-radius 2px
    margin-top 104px
    padding 61px 100px 52px
    .title
        text-align: center
        font-size 16px
        line-height 28px
    .profile
        text-align center
        font-size 12px
        color rgba(255,255,255,.3)
        margin 19px auto 45px
    .input
        display flex
        justify-content space-between
        input 
            outline none 
            border 1px solid rgba(255,255,255,.2)
            width 292px
            height 50px
            background rgba(0,0,0,0)
            border-radius 2px
            color #fff
            text-indent 22px
            




